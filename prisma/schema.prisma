generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs" 
}

datasource db {
  provider = "postgresql"
}

model admin {
  adminId   String    @id @unique @default(cuid())
  name      String
  email     String    @unique
  password  String
  role      adminRole @default(ADMIN)
  totpSecret String?
  isActive Boolean @default(true)
  createdAt DateTime  @default(now())
}

enum adminRole {
  SUPER_ADMIN
  ADMIN
}
